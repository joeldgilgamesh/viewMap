<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightwhite"
    android:padding="10dp"
    tools:context=".ProfilActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:onClick="gotoNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"/>
        <TextView
            android:id="@+id/LogInbtn"
            android:onClick="LognIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dconnexion"
            android:gravity="end"
            android:textColor="@color/blackcolor"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="Add Your  Position"
            android:textColor="@color/blackcolor"
            android:textSize="25dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/latitude"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Latitude"
            android:layout_marginTop="35dp"
            android:paddingLeft="15dp"
            android:inputType="text"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn"
            />
        <EditText
            android:id="@+id/longitude"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Longitude"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="text"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn"
            />

        <EditText

            android:id="@+id/country"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:hint="Country Name"
            android:inputType="text"/>

        <EditText
            android:id="@+id/locality"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:hint="Locality"
            android:inputType="text" />

        <EditText
            android:id="@+id/adress"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:hint="Adresse" />
        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/ic_place_black_24dp"
            android:textColor="@color/whitecolor"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:elevation="5dp"
            android:background="@drawable/joinbtn" />


        <Button
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:id="@+id/joinus"
            android:text="Update Profil"
            android:textColor="@color/whitecolor"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:elevation="5dp"
            android:background="@drawable/joinbtn"
            android:onClick="gotoNext"
            />




    </LinearLayout>


</LinearLayout>